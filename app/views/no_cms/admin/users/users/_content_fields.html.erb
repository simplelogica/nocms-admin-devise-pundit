<div id="content_fields">

  <div class="row">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="row">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="row">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="row">
    <%= f.label :roles %>
    <%= f.collection_check_boxes(:role_ids, NoCms::Admin::Users::Role.order(:name).each, :id, :name) do |b| %>
      <% b.label { b.check_box + " #{b.text}" } %>
    <% end -%>
  </div>

</div>
